    "properties": {
      "prompt": {
        "type": "string",
        "description": "The prompt for DALL-E 3"
      },
      "quality": {
        "type": "string",
        "description": "The quality of the image, either 'standard' or 'hd'"
      }
    },
    "required": [
      "prompt",
      "quality"
    ]
  }
}
